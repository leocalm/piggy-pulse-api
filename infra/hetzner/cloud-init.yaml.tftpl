#cloud-config

hostname: ${server_hostname}
manage_etc_hosts: true
timezone: ${timezone}
package_update: true
package_upgrade: true

packages:
  - python3
  - python3-apt
  - ca-certificates
  - curl
  - jq

runcmd:
  - timedatectl set-timezone ${timezone}

final_message: "PiggyPulse bootstrap complete. Continue with Ansible hardening and deployment."
